
<div class="header">
    <div class="wrapper">
        <h1 class="dipsplay-4 heading">Dashboard</h1>
        <h2 class="subheading">Track <span class="website">Projects</span></h2>
        <hr/>
        <div class="option_menu">
            <div class="welcome">
                <p>So how is it going <span class="member_name"><%=Current.member.name%></span>?</p>
            </div>
<div class="gear_icon">
    <%=link_to '<i class="bi bi-pin-fill"></i>'.html_safe , pinchange_path %> 
    </div>            
        </div>
        <hr/>


    </div>
</div>

<div class="dashboard">
    <div class="wrapper">
        <div class="welcome_message">
        <%=link_to "Add project" , new_project_path%>
         </div>
         <div class="projects">

            <div class="splide">
                <div class="splide__track">
                    <ul class="splide__list">
                         
                        <li class="splide__slide">
                            <%@project.each do |project| %>
             
                            <% if project.completed? %>

                               <%= render("shared/project_card" , obj:project)%>
                            <%end%>

                               <%end%>
                        </li>
                        <li class="splide__slide">
                            <%@project.each do |project| %>
             
                            <% if project.ongoing? %>

                            <%=link_to project_path(project) do%>
                               <%= render("shared/project_card" , obj:project)%>
                               <%end%>
                            <%end%>

                               <%end%>
                        </li>

                         <li class="splide__slide">
                            <%@project.each do |project| %>
             
                            <% if project.future? %>

                            <%=link_to project_path(project) do%>
                               <%= render("shared/project_card" , obj:project)%>
                               <%end%>
                            <%end%>

                               <%end%>
                        </li>
                  
                    </ul>
                </div>
            </div>
            
         </div>
         <!-- <div class="add_project">
            <i class="bi bi-plus-circle-fill"></i>
         </div> -->
